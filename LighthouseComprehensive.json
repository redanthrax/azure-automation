{
    "$schema": "https://schema.management.azure.com/schemas/2019-08-01/subscriptionDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "mspOfferName": {
            "type": "string",
            "metadata": {
                "description": "Specify a unique name for your offer"
            },
            "defaultValue": "Allixo Azure Management - Comprehensive"
        },
        "mspOfferDescription": {
            "type": "string",
            "metadata": {
                "description": "Name of the Managed Service Provider offering"
            },
            "defaultValue": "Azure Management by Allixo with full permissions (AKS, ACR, Network)"
        },
        "managedByTenantId": {
            "type": "string",
            "metadata": {
                "description": "Specify the tenant id of the Managed Service Provider"
            },
            "defaultValue": "0819678a-52f9-44d6-9ccb-9d3942559a2c"
        },
        "utcValue": {
            "type": "string",
            "defaultValue": "[utcNow()]"
        }
    },
    "variables": {
        "mspRegistrationName": "[guid(concat(parameters('mspOfferName'), 'registration', parameters('utcValue')))]",
        "mspAssignmentName": "[guid(concat(parameters('mspOfferName'), 'assignment', parameters('utcValue')))]"
    },
    "resources": [
        {
            "type": "Microsoft.ManagedServices/registrationDefinitions",
            "apiVersion": "2022-10-01",
            "name": "[variables('mspRegistrationName')]",
            "properties": {
                "registrationDefinitionName": "[parameters('mspOfferName')]",
                "description": "[parameters('mspOfferDescription')]",
                "managedByTenantId": "[parameters('managedByTenantId')]",
                "authorizations": [
                    {
                        "principalId": "14a3bc2d-b76e-42ab-8261-0402f7e1236e",
                        "roleDefinitionId": "b24988ac-6180-42a0-ab88-20f7382dd24c",
                        "principalIdDisplayName": "Customer Principal - Contributor"
                    },
                    {
                        "principalId": "14a3bc2d-b76e-42ab-8261-0402f7e1236e",
                        "roleDefinitionId": "18d7d88d-d35e-4fb5-a5c3-7773c20a72d9",
                        "principalIdDisplayName": "Customer Principal - User Access Administrator",
                        "delegatedRoleDefinitionIds": [
                            "b24988ac-6180-42a0-ab88-20f7382dd24c",
                            "4d97b98b-1d4f-4787-a291-c67834d212e7",
                            "f1a07417-d97a-45cb-824c-7a7467783830",
                            "7f951dda-4ed3-4680-a7ca-43fe172d538d"
                        ]
                    },
                    {
                        "principalId": "14a3bc2d-b76e-42ab-8261-0402f7e1236e",
                        "roleDefinitionId": "4d97b98b-1d4f-4787-a291-c67834d212e7",
                        "principalIdDisplayName": "Customer Principal - Network Contributor"
                    },
                    {
                        "principalId": "14a3bc2d-b76e-42ab-8261-0402f7e1236e",
                        "roleDefinitionId": "f1a07417-d97a-45cb-824c-7a7467783830",
                        "principalIdDisplayName": "Customer Principal - Managed Identity Operator"
                    },
                    {
                        "principalId": "5020b9dd-1a87-4c68-8723-8267152046f3",
                        "roleDefinitionId": "b24988ac-6180-42a0-ab88-20f7382dd24c",
                        "principalIdDisplayName": "DevOps Service Principal - Contributor"
                    },
                    {
                        "principalId": "5020b9dd-1a87-4c68-8723-8267152046f3",
                        "roleDefinitionId": "18d7d88d-d35e-4fb5-a5c3-7773c20a72d9",
                        "principalIdDisplayName": "DevOps Service Principal - User Access Administrator",
                        "delegatedRoleDefinitionIds": [
                            "b24988ac-6180-42a0-ab88-20f7382dd24c",
                            "4d97b98b-1d4f-4787-a291-c67834d212e7",
                            "f1a07417-d97a-45cb-824c-7a7467783830",
                            "7f951dda-4ed3-4680-a7ca-43fe172d538d"
                        ]
                    },
                    {
                        "principalId": "5020b9dd-1a87-4c68-8723-8267152046f3",
                        "roleDefinitionId": "4d97b98b-1d4f-4787-a291-c67834d212e7",
                        "principalIdDisplayName": "DevOps Service Principal - Network Contributor"
                    },
                    {
                        "principalId": "5020b9dd-1a87-4c68-8723-8267152046f3",
                        "roleDefinitionId": "f1a07417-d97a-45cb-824c-7a7467783830",
                        "principalIdDisplayName": "DevOps Service Principal - Managed Identity Operator"
                    }
                ]
            }
        },
        {
            "type": "Microsoft.ManagedServices/registrationAssignments",
            "apiVersion": "2022-10-01",
            "name": "[variables('mspAssignmentName')]",
            "dependsOn": [
                "[resourceId('Microsoft.ManagedServices/registrationDefinitions', variables('mspRegistrationName'))]"
            ],
            "properties": {
                "registrationDefinitionId": "[resourceId('Microsoft.ManagedServices/registrationDefinitions', variables('mspRegistrationName'))]"
            }
        }
    ],
    "outputs": {
        "mspOfferName": {
            "type": "string",
            "value": "[parameters('mspOfferName')]"
        },
        "registrationId": {
            "type": "string",
            "value": "[variables('mspRegistrationName')]"
        },
        "includedPermissions": {
            "type": "object",
            "value": {
                "directRoles": [
                    "Contributor",
                    "User Access Administrator", 
                    "Network Contributor",
                    "Managed Identity Operator"
                ],
                "delegatedRoles": [
                    "Contributor",
                    "Network Contributor", 
                    "Managed Identity Operator",
                    "AcrPull"
                ],
                "description": "This template provides comprehensive Azure management permissions including AKS, ACR, and networking capabilities"
            }
        }
    }
}